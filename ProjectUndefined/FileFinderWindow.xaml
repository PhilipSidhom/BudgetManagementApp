<Window x:Class="ProjectUndefined.FileFinderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectUndefined"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="FileFinderWindow" Height="250" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" FontSize="20" HorizontalAlignment="Center">
            <TextBlock>
                Welcome to the HomeBudgetApp!
            </TextBlock>
        </Label>
        <Label Grid.Row="1" FontSize="15" HorizontalAlignment="Center">
            <TextBlock>
                Would you like to create a new file or open an existing file
            </TextBlock>
        </Label>
        <Button x:Name="btnLoad" Content="Choose file" Grid.Row="3" HorizontalAlignment="Right" Margin="10,30,20,10" FontSize="25" Click="btnLoad_Click"/>
        <Button x:Name="btnCreate" Content="Create new file" Grid.Row="3" HorizontalAlignment="Left" Margin="20,30,10,10" FontSize="25" Click="btnCreate_Click"/>
    </Grid>
</Window>
